<h1><%= @outing.name %></h1>
<p><%= @outing.location %></p>
<p><%= @outing.date %></p>

<p>Count of Contestants: <%= @outing.count_contestants %></p>

<h3>Contestants: </h3>
  <% @outing.contestants.each do |contestant| %>
    <div id="contestant-<%= contestant.id %>">
      <p><%= contestant.name %></p>
      <%= button_to "Remove #{contestant.name}", "/outings/#{@outing.id}?contestant=#{contestant.id}", method: :delete %>
    </div>
  <% end %>